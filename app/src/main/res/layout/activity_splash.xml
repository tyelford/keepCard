<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.tyelford.cardkeeper.Splash">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:id="@+id/splash_logo"
        android:layout_marginBottom="20dp"
        android:src="@drawable/logo1" />

    <Button
        android:layout_width="277dp"
        android:layout_height="wrap_content"
        android:text="Add a new card"
        android:id="@+id/button_add_card"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        />

    <Button
        android:layout_width="277dp"
        android:layout_height="wrap_content"
        android:text="Person"
        android:id="@+id/button_my_occasions"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:onClick="loadPersons"/>

    <Button
        android:layout_width="277dp"
        android:layout_height="wrap_content"
        android:text="My Givers"
        android:id="@+id/button_my_givers"
        android:layout_gravity="center_horizontal"
        android:onClick="loadGiver"/>


</LinearLayout>
