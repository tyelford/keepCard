<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.tyelford.cardkeeper.Splash">

    <ImageView
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:layout_gravity="center"
        android:id="@+id/splash_logo"
        android:layout_marginBottom="15dp"
        android:src="@drawable/logo1" />

    <Button
        android:layout_width="277dp"
        android:layout_height="wrap_content"
        android:text="@string/splash_add_card_button"
        android:id="@+id/button_add_card"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="15dp"
        android:onClick="loadNewCard"
        android:textColor="#212121" />

    <Button
        android:layout_width="277dp"
        android:layout_height="wrap_content"
        android:text="@string/splash_add_occasion_button"
        android:id="@+id/button_add_occasion"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="15dp"
        android:onClick="loadNewOccasion"
        android:textColor="#212121" />

    <Button
        android:layout_width="277dp"
        android:layout_height="wrap_content"
        android:text="@string/splash_my_givers_button"
        android:id="@+id/button_my_givers"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="15dp"
        android:onClick="loadPersons"
        android:textColor="#212121" />

    <Button
        android:layout_width="277dp"
        android:layout_height="wrap_content"
        android:text="@string/splash_my_occasion_button"
        android:id="@+id/button_my_occasions"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="15dp"
        android:onClick="loadOccasions"
        android:textColor="#212121" />





    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Database"
        android:id="@+id/button_delete_database"
        android:layout_gravity="right"
        android:onClick="deleteDatabase"/>


</LinearLayout>
